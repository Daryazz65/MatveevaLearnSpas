<Window x:Class="MatveevaLearnSpas.View.Windows.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatveevaLearnSpas.View.Windows"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"> 
    <Grid Background="#131F24">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="MessageTextBlock" TextWrapping="Wrap" Foreground="White" 
                   Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button x:Name="OkButton" Content="OK" Width="75" Height="30" Margin="10" 
                Grid.Row="1" HorizontalAlignment="Center" Click="OkButton_Click"/>
    </Grid>
</Window>