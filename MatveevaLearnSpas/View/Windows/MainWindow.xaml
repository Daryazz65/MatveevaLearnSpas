<Window x:Class="MatveevaLearnSpas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatveevaLearnSpas"
       mc:Ignorable="d"
       Title="Главное окно сотрудника" Height="1080" Width="1820" 
       WindowStartupLocation="CenterScreen" Background="#131F24">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Background="#293B43">
            <Image Name="LogoImg" Grid.RowSpan="2" Source="/Resources/Icons/Logo.png" 
                   HorizontalAlignment="Left" Height="70"/>
            <Border Height="50"/>
            <Button HorizontalAlignment="Left" Margin="50 0 0 0" Height="26" x:Name="TestingBtn" Click="TestingBtn_Click" Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Тестирование" />
            </Button>
            <Border Height="17"/>
            <Button HorizontalAlignment="Left" Margin="50 0 0 0" Height="26" x:Name="MaterialBtn" Click="MaterialBtn_Click"  Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Доп. материал"/>
            </Button>
            <Border Height="17"/>
            <Button HorizontalAlignment="Left" Margin="50 0 0 0" Height="26" x:Name="ProfileBtn" Click="ProfileBtn_Click"  Background="Transparent" BorderBrush="Transparent">
                <TextBlock Text="Профиль"/>
            </Button>
            <Border Height="730"/>
            <Button Content="Выйти  из аккаунта" Margin="10"
                    Height="45" Name="GoOutBtn" Click="GoOutBtn_Click"/>
        </StackPanel>
        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>