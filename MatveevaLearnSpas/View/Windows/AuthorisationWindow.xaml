<Window x:Class="MatveevaLearnSpas.View.Windows.AuthorisationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatveevaLearnSpas.View.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="450" Width="700" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#131F24">
        <Grid.RowDefinitions>
            <RowDefinition Height=".6*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Text="Авторизация" FontSize="30" FontWeight="SemiBold" HorizontalAlignment="Center"/>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width=".5*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width=".3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <TextBlock Text="Логин:" HorizontalAlignment="Right"/>
            <TextBox Name="LoginTb" Grid.Column="2" TextAlignment="Left"/>
            <TextBlock Text="Пароль:" Grid.Row="2" HorizontalAlignment="Right"/>
            <PasswordBox Name="PasswordTb" Grid.Column="2" Grid.Row="2" HorizontalContentAlignment="Left" Foreground="White"/>
        </Grid>
        <Button Grid.Row="3" Margin="270 0 270 10" Height="30" Background="Transparent"
                BorderBrush="Transparent" Name="PasswordRecoveryBtn" Click="PasswordRecoveryBtn_Click">
            <TextBlock Text="Забыли пароль?" FontSize="15"/>
        </Button>
        <Button Name="CaptchaBtn" Content="Я не робот" Grid.Row="5" 
                VerticalAlignment="Top" Margin="270 0 270 0" Height="30" Click="CaptchaBtn_Click"
                Background="Transparent" BorderBrush="Transparent"/>
        <Button Name="EnterBtn" Margin="120 0 115 0" Click="EnterBtn_Click" Content="Войти" Grid.Row="5"/>
    </Grid>
</Window>