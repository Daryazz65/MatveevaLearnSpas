<Page x:Class="MatveevaLearnSpas.View.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Тестирование">
    <Grid Background="#131F24">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock x:Name="QuestionTextBlock" Text="Вопрос загружается..." 
                       FontSize="18" FontWeight="Bold" TextWrapping="Wrap" 
                       HorizontalAlignment="Center" Margin="0,20,0,20"/>
            <Button x:Name="AnswerBtn1" Click="AnswerButton1_Click"  FontSize="16" Margin="5"/>
            <Button x:Name="AnswerBtn2" Click="AnswerButton1_Click"  FontSize="16" Margin="5"/>
            <Button x:Name="AnswerBtn3" Click="AnswerButton1_Click"  FontSize="16" Margin="5"/>
            <Button x:Name="NextButton" Content="Далее" Click="NextButton_Click" 
                    FontSize="16" Margin="10" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Page>