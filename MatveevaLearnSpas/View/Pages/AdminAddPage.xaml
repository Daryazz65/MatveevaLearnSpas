<Page x:Class="MatveevaLearnSpas.View.Pages.AdminAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1620"
      Title="Добавление информации">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="580"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"
               Text="Добавление/ изменение/ редактирование информации о пользователях." Foreground="White"/>
        <DataGrid x:Name="UserDG" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  Grid.Row="1" ColumnWidth="*" Margin="5" FontSize="20" IsSynchronizedWithCurrentItem="True" 
                  SelectionChanged="UserDG_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" />
                <DataGridTextColumn Header="Имя" Binding="{Binding FullName}"/>
                <DataGridTextColumn Header="IdRole" Binding="{Binding Role.Name}"/>
                <DataGridTextColumn Header="IdPost" Binding="{Binding Post.Name}"/>
                <DataGridTextColumn Header="Photo" Binding="{Binding Photo}"/>
                <DataGridTextColumn Header="DateRegistration" Binding="{Binding DateRegistration, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Login" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Password" Binding="{Binding Password}"/>
                <DataGridTemplateColumn Header="Изменить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="EditBtn">
                                <TextBlock Text="Изменить" />
                            </Button> 
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Удалить">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Name="DeleteBtn" Click="DeleteBtn_Click">
                                <TextBlock Text="Удалить" />
                            </Button> 
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="5" BorderThickness="1" BorderBrush="#026DD0">
                <StackPanel  Margin="5">
                    <TextBlock Text="Добавить пользователя" FontWeight="Bold"
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" Margin="5" Foreground="White"/>
                    <Grid Name="NewUserGrid" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="5" Text="Полное имя" HorizontalAlignment="Left" Foreground="White"/>
                        <TextBox Margin="5" Grid.Column="1" FontSize="20" Height="40" Text="{Binding User.FullName}" Name="AddNameTbl" Foreground="White"/>
                        <TextBlock Margin="5" Grid.Row="1" Text="Роль" HorizontalAlignment="Left" Foreground="White"/>
                        <ComboBox Margin="5" Grid.Row="1" Height="40" FontSize="20" Grid.Column="1" Name="AddRoleCmb" Background="White"/>
                        <TextBlock Margin="5" Grid.Row="2" Text="Должность" HorizontalAlignment="Left" Foreground="White"/>
                        <ComboBox Margin="5" Grid.Row="2" Height="40" FontSize="20" Grid.Column="1" Name="AddPostCmb"/>
                        <TextBlock Margin="5" Grid.Row="3" Text="Дата регистрации" HorizontalAlignment="Left" Foreground="White"/>
                        <DatePicker FontSize="20" Margin="5" Grid.Row="3" Height="40" Grid.Column="1" Name="AddDateRegistrDp" />
                        <TextBlock Margin="5" Grid.Row="4" Text="Логин" HorizontalAlignment="Left" Foreground="White"/>
                        <TextBox FontSize="20" Margin="5" Grid.Row="4" Height="40" Grid.Column="1" Text="{Binding User.Login}" Name="AddLoginBtn" Foreground="White"/>
                        <TextBlock Margin="5" Grid.Row="5" Text="Пароль" HorizontalAlignment="Left" Foreground="White"/>
                        <TextBox FontSize="20" Margin="5" Grid.Row="5" Height="40" Grid.Column="1" Text="{Binding User.Password}" Name="AddPasswordBtn" Foreground="White"/>
                        <Button Grid.Row="6" Grid.ColumnSpan="2" Width="200" Content="Добавить" Margin="5"
                            HorizontalAlignment="Center" VerticalAlignment="Center" Height="45"
                                Name="AddUserBtn" Click="AddUserBtn_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Margin="5" BorderThickness="1" BorderBrush="#026DD0">
                <StackPanel  Margin="5">
                    <TextBlock Text="Изменить информацию" FontWeight="Bold"
                       HorizontalAlignment="Center" Foreground="White"
                       VerticalAlignment="Center" Margin="5"/>
                    <Grid Name="EditUserGrid" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Foreground="White" Margin="5" Text="Полное имя" HorizontalAlignment="Left"/>
                        <TextBox Foreground="White" Name="txtFullName" FontSize="20" Margin="5" Height="40" Grid.Column="1" Text="{Binding User.FullName}"/>
                        <TextBlock Foreground="White" Margin="5" Grid.Row="1" Text="Роль" HorizontalAlignment="Left" />
                        <ComboBox Margin="5" Grid.Row="1" Height="40" FontSize="20" Grid.Column="1" Name="EditRoleCmb" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                        <TextBlock Foreground="White" Grid.Row="2" Margin="5" Text="Должность" HorizontalAlignment="Left"/>
                        <ComboBox Margin="5" Grid.Row="2" Height="40" FontSize="20" Grid.Column="1" Name="EditPostCmb" DisplayMemberPath="Name" SelectedValuePath="Id"/>
                        <TextBlock Foreground="White" Margin="5" Grid.Row="3" Text="Дата регистрации" HorizontalAlignment="Left"/>
                        <DatePicker FontSize="20" Margin="5" Grid.Row="3" Height="40" Grid.Column="1" Name="EditDateRegistrDp"/>
                        <TextBlock Foreground="White" Grid.Row="4" Text="Логин" Margin="5" HorizontalAlignment="Left"/>
                        <TextBox Foreground="White" Name="txtLogin" FontSize="20" Grid.Row="4" Height="40" Margin="5" Grid.Column="1" Text="{Binding User.Login}"/>
                        <TextBlock Foreground="White" Grid.Row="5" Text="Пароль" Margin="5" HorizontalAlignment="Left"/>
                        <TextBox Foreground="White" Name="txtPassword" FontSize="20" Grid.Row="5" Height="40" Grid.Column="1" Margin="5" Text="{Binding User.Password}"/>
                        <Button Grid.Row="6" Grid.ColumnSpan="2" Width="200"  Content="Изменить" Margin="5"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                                Name="EditUserBtn" Click="EditUserBtn_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>