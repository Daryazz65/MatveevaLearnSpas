<Page x:Class="MatveevaLearnSpas.View.Pages.EmployeePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="480"
      Title="EmployeePage">
    <Grid>
        <DataGrid x:Name="TestingDG"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding User.FullName}" Width="*"/>
                <DataGridTextColumn Header="Лекция" Binding="{Binding Section.Name}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Дата тестирования" Binding="{Binding DateTesting, StringFormat=d}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>