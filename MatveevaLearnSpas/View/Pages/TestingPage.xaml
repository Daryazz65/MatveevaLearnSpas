<Page x:Class="MatveevaLearnSpas.View.Pages.TestingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="480"
      Title="Тестирование">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="1" 
              Background="#026DD0" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button Name="ModulOneBtn" Click="ModulOneBtn_Click" Grid.ColumnSpan="3" Grid.Row="2"
                    Background="#131F24" BorderBrush="#293B43"
                    Margin="15" 
                    VerticalAlignment="Center">
                <TextBlock Name="ModulOneTbl" Foreground="White" Text="Перейти к модулю 1" FontSize="15"/>
            </Button>
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Text="МОДУЛЬ 1" FontSize="20"
                           HorizontalAlignment="Left" Margin="10"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1" 
              Background="#026DD0" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button Name="ModulTwoBtn" Click="ModulTwoBtn_Click" Grid.ColumnSpan="3" Grid.Row="2"
                    Background="#131F24" BorderBrush="#293B43"
                    Margin="15" 
                    VerticalAlignment="Center">
                <TextBlock Text="Перейти к модулю 2" Foreground="White" FontSize="15"/>
            </Button>
            <Grid Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Text="МОДУЛЬ 2" FontSize="20"
                           HorizontalAlignment="Left" Margin="10"/>
            </Grid>
        </Grid>
    </Grid>
</Page>