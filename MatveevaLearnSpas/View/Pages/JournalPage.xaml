<Page x:Class="MatveevaLearnSpas.View.Pages.JournalPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="480"
      Title="JournalPage">
    <Grid>
        <StackPanel>
            <TextBlock Text="Название лекции:"/>
            <TextBox x:Name="LectureNameTb" Width="300"/>
            <TextBlock Text="Вопросы и ответы:" Margin="0,10,0,0"/>
            <DataGrid x:Name="QuestionsDG" AutoGenerateColumns="False" CanUserAddRows="True" Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Вопрос" Binding="{Binding Question}" Width="2*"/>
                    <DataGridTextColumn Header="Правильный ответ" Binding="{Binding CorrectAnswer}" Width="*"/>
                    <DataGridTextColumn Header="Неверный ответ 1" Binding="{Binding IncorrectAnswer1}" Width="*"/>
                    <DataGridTextColumn Header="Неверный ответ 2" Binding="{Binding IncorrectAnswer2}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Добавить лекцию" Click="AddLectureBtn_Click"  Width="150" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
