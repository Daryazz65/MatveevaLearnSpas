<Page x:Class="MatveevaLearnSpas.View.Pages.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MatveevaLearnSpas.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="480"
      Title="Профиль">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.Row="1" Width="150" Height="190" BorderBrush="#026DD0" BorderThickness="2" CornerRadius="10">
            <Image x:Name="PhotoImg" Stretch="UniformToFill"/>
        </Border>
        <StackPanel Margin="5" Grid.ColumnSpan="2">
            <TextBlock x:Name="FullNameTbl" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Left" TextWrapping="Wrap"/>
            <TextBlock x:Name="PostTbl" FontSize="12" Margin="0 0 0 5" HorizontalAlignment="Left"/>
            <TextBlock x:Name="RoleTbl" FontSize="12" Margin="0 0 0 5" HorizontalAlignment="Left"/>
            <TextBlock x:Name="DateRegTbl" FontSize="12" Margin="0 0 0 5" HorizontalAlignment="Left"/>
        </StackPanel>
        <GroupBox Header="Рейтинг" Margin="0 -10 0 0" Grid.Row="1" Height="205">
            <StackPanel>
                <TextBlock HorizontalAlignment="Left" x:Name="QuestionsPassedTbl" FontSize="12" Margin="5"/>
                <TextBlock HorizontalAlignment="Left" x:Name="ErrorsTbl" FontSize="12" Margin="5"/>
                <TextBlock HorizontalAlignment="Left" x:Name="AveragePercentTbl" FontSize="12" Margin="5" TextWrapping="Wrap"/>
                <TextBlock HorizontalAlignment="Left" x:Name="LecturesPassedTbl" FontSize="12" Margin="5"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>